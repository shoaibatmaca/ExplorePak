<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Appstarter.promo1">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="350dp"
           android:src="@drawable/prmo1"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Find your ideal getaway"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
           android:layout_marginHorizontal="24dp"
           android:textAlignment="center"
           android:textSize="24sp"
           android:textColor="@color/black"
           android:textStyle="bold" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Join us in exploring a world of incredible destinations. Whether you're seeking a relaxing retreat or an exciting adventure, find your perfect getaway with our curated selections!"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
           android:layout_marginHorizontal="24dp"
           android:textAlignment="center"
           android:textSize="14sp"
           android:textColor="@color/secondary_text"
           android:textStyle="bold" />


       <Button
           android:id="@+id/prmo1_continue"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="end"
           android:layout_marginEnd="15dp"
           android:layout_marginTop="15dp"
           android:textColor="@color/white"
           android:text="Continue"
           android:drawableEnd="@drawable/chvrn_right"
           android:background="@drawable/btn"/>


       <TextView
           android:id="@+id/prmo1_skip"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Skip for now"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
           android:layout_marginHorizontal="24dp"
           android:textAlignment="center"
           android:textSize="14sp"
           android:textColor="@color/secondary_text"
           android:textStyle="bold" />



   </LinearLayout>



</ScrollView>